{
  "name": "newover/sortie",
  "description": "A way out for data.",
  "homepage": "https://github.com/davemedema/newover-sortie",
  "keywords": [
    "helpers",
    "string",
    "utility",
    "utils"
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",
  "authors": [
    {
      "name": "Dave Medema",
      "email": "davemedema@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sortie\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1.3",
    "illuminate/support": "^5.6",
    "nesbot/carbon": "^1.27"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.9.2",
    "phpunit/phpunit": "^7.0"
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "pcs": "php-cs-fixer fix --diff --dry-run --verbose",
    "phpstan": "phpstan analyse --configuration phpstan.neon --level 3 src tests",
    "phpunit": "phpunit --coverage-html=tests/coverage --verbose"
  }
}
